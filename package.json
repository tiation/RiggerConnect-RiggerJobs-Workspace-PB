{
  "name": "tiation-rigger-workspace",
  "version": "1.0.0",
  "description": "Enterprise-grade workspace orchestration for the Tiation Rigger platform",
  "private": true,
  "workspaces": [
    "../tiation-rigger-*"
  ],
  "scripts": {
    "setup": "npm run install:all && npm run build:shared",
    "install:all": "npm run install:workspace && npm run install:components",
    "install:workspace": "npm install",
    "install:components": "npm run install:automation-server && npm run install:connect-api && npm run install:connect-app && npm run install:jobs-app && npm run install:mobile-app && npm run install:metrics-dashboard && npm run install:shared-libraries && npm run install:infrastructure && npm run install:docs",
    "install:automation-server": "cd ../tiation-rigger-automation-server && npm install",
    "install:connect-api": "cd ../tiation-rigger-connect-api && npm install",
    "install:connect-app": "cd ../tiation-rigger-connect-app && npm install",
    "install:jobs-app": "cd ../tiation-rigger-jobs-app && npm install",
    "install:mobile-app": "cd ../tiation-rigger-mobile-app && npm install",
    "install:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm install",
    "install:shared-libraries": "cd ../tiation-rigger-shared-libraries && npm install",
    "install:infrastructure": "cd ../tiation-rigger-infrastructure && npm install",
    "install:docs": "cd ../tiation-rigger-workspace-docs && npm install",
    "build:all": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd ../tiation-rigger-shared-libraries && npm run build",
    "build:backend": "npm run build:automation-server && npm run build:connect-api",
    "build:frontend": "npm run build:connect-app && npm run build:jobs-app && npm run build:metrics-dashboard",
    "build:automation-server": "cd ../tiation-rigger-automation-server && npm run build",
    "build:connect-api": "cd ../tiation-rigger-connect-api && npm run build",
    "build:connect-app": "cd ../tiation-rigger-connect-app && npm run build",
    "build:jobs-app": "cd ../tiation-rigger-jobs-app && npm run build",
    "build:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run build",
    "dev": "docker-compose up -d",
    "dev:build": "docker-compose up -d --build",
    "dev:logs": "docker-compose logs -f",
    "dev:stop": "docker-compose stop",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v --rmi all",
    "dev:restart": "docker-compose restart",
    "dev:automation-server": "cd ../tiation-rigger-automation-server && npm run dev",
    "dev:connect-api": "cd ../tiation-rigger-connect-api && npm run dev",
    "dev:connect-app": "cd ../tiation-rigger-connect-app && npm run dev",
    "dev:jobs-app": "cd ../tiation-rigger-jobs-app && npm run dev",
    "dev:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run dev",
    "dev:docs": "cd ../tiation-rigger-workspace-docs && npm run dev",
    "test": "npm run test:all",
    "test:all": "npm run test:shared && npm run test:backend && npm run test:frontend",
    "test:shared": "cd ../tiation-rigger-shared-libraries && npm run test",
    "test:backend": "npm run test:automation-server && npm run test:connect-api",
    "test:frontend": "npm run test:connect-app && npm run test:jobs-app && npm run test:metrics-dashboard",
    "test:automation-server": "cd ../tiation-rigger-automation-server && npm run test",
    "test:connect-api": "cd ../tiation-rigger-connect-api && npm run test",
    "test:connect-app": "cd ../tiation-rigger-connect-app && npm run test",
    "test:jobs-app": "cd ../tiation-rigger-jobs-app && npm run test",
    "test:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run test",
    "test:coverage": "npm run test:all -- --coverage",
    "lint": "npm run lint:all",
    "lint:all": "npm run lint:shared && npm run lint:backend && npm run lint:frontend",
    "lint:shared": "cd ../tiation-rigger-shared-libraries && npm run lint",
    "lint:backend": "npm run lint:automation-server && npm run lint:connect-api",
    "lint:frontend": "npm run lint:connect-app && npm run lint:jobs-app && npm run lint:metrics-dashboard",
    "lint:automation-server": "cd ../tiation-rigger-automation-server && npm run lint",
    "lint:connect-api": "cd ../tiation-rigger-connect-api && npm run lint",
    "lint:connect-app": "cd ../tiation-rigger-connect-app && npm run lint",
    "lint:jobs-app": "cd ../tiation-rigger-jobs-app && npm run lint",
    "lint:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run lint",
    "lint:fix": "npm run lint:all -- --fix",
    "format": "npm run format:all",
    "format:all": "npm run format:shared && npm run format:backend && npm run format:frontend",
    "format:shared": "cd ../tiation-rigger-shared-libraries && npm run format",
    "format:backend": "npm run format:automation-server && npm run format:connect-api",
    "format:frontend": "npm run format:connect-app && npm run format:jobs-app && npm run format:metrics-dashboard",
    "format:automation-server": "cd ../tiation-rigger-automation-server && npm run format",
    "format:connect-api": "cd ../tiation-rigger-connect-api && npm run format",
    "format:connect-app": "cd ../tiation-rigger-connect-app && npm run format",
    "format:jobs-app": "cd ../tiation-rigger-jobs-app && npm run format",
    "format:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run format",
    "type-check": "npm run type-check:all",
    "type-check:all": "npm run type-check:shared && npm run type-check:backend && npm run type-check:frontend",
    "type-check:shared": "cd ../tiation-rigger-shared-libraries && npm run type-check",
    "type-check:backend": "npm run type-check:automation-server && npm run type-check:connect-api",
    "type-check:frontend": "npm run type-check:connect-app && npm run type-check:jobs-app && npm run type-check:metrics-dashboard",
    "type-check:automation-server": "cd ../tiation-rigger-automation-server && npm run type-check",
    "type-check:connect-api": "cd ../tiation-rigger-connect-api && npm run type-check",
    "type-check:connect-app": "cd ../tiation-rigger-connect-app && npm run type-check",
    "type-check:jobs-app": "cd ../tiation-rigger-jobs-app && npm run type-check",
    "type-check:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run type-check",
    "security:audit": "npm run security:audit:all",
    "security:audit:all": "npm audit --audit-level=moderate && npm run security:audit:components",
    "security:audit:components": "npm run security:audit:automation-server && npm run security:audit:connect-api && npm run security:audit:connect-app && npm run security:audit:jobs-app && npm run security:audit:metrics-dashboard && npm run security:audit:shared-libraries",
    "security:audit:automation-server": "cd ../tiation-rigger-automation-server && npm audit --audit-level=moderate",
    "security:audit:connect-api": "cd ../tiation-rigger-connect-api && npm audit --audit-level=moderate",
    "security:audit:connect-app": "cd ../tiation-rigger-connect-app && npm audit --audit-level=moderate",
    "security:audit:jobs-app": "cd ../tiation-rigger-jobs-app && npm audit --audit-level=moderate",
    "security:audit:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm audit --audit-level=moderate",
    "security:audit:shared-libraries": "cd ../tiation-rigger-shared-libraries && npm audit --audit-level=moderate",
    "clean": "npm run clean:all",
    "clean:all": "npm run clean:workspace && npm run clean:components",
    "clean:workspace": "rm -rf node_modules package-lock.json",
    "clean:components": "npm run clean:automation-server && npm run clean:connect-api && npm run clean:connect-app && npm run clean:jobs-app && npm run clean:metrics-dashboard && npm run clean:shared-libraries",
    "clean:automation-server": "cd ../tiation-rigger-automation-server && npm run clean",
    "clean:connect-api": "cd ../tiation-rigger-connect-api && npm run clean",
    "clean:connect-app": "cd ../tiation-rigger-connect-app && npm run clean",
    "clean:jobs-app": "cd ../tiation-rigger-jobs-app && npm run clean",
    "clean:metrics-dashboard": "cd ../tiation-rigger-metrics-dashboard && npm run clean",
    "clean:shared-libraries": "cd ../tiation-rigger-shared-libraries && npm run clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --rmi all && docker system prune -f",
    "health-check": "curl -f http://localhost/health || exit 1",
    "docs:generate": "npm run docs:generate:all",
    "docs:generate:all": "npm run docs:generate:shared && npm run docs:generate:backend",
    "docs:generate:shared": "cd ../tiation-rigger-shared-libraries && npm run docs:generate",
    "docs:generate:backend": "npm run docs:generate:automation-server && npm run docs:generate:connect-api",
    "docs:generate:automation-server": "cd ../tiation-rigger-automation-server && npm run docs:generate",
    "docs:generate:connect-api": "cd ../tiation-rigger-connect-api && npm run docs:generate",
    "docs:serve": "cd ../tiation-rigger-workspace-docs && npm run dev",
    "prepare": "husky install",
    "postinstall": "echo 'Workspace setup complete!'"
  },
  "keywords": [
    "construction",
    "rigger",
    "crane-operator",
    "job-matching",
    "enterprise",
    "automation",
    "workspace",
    "microservices"
  ],
  "author": "Tiation Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiation/tiation-rigger-workspace.git"
  },
  "bugs": {
    "url": "https://github.com/tiation/tiation-rigger-workspace/issues"
  },
  "homepage": "https://github.com/tiation/tiation-rigger-workspace#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
